<%- include layouts/header.ejs %>
     <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
          <div class="header">
            <h2>Edit <strong>Pharmacy</strong> Data</h2>
            <div class="breadcrumb-wrapper">
              <ol class="breadcrumb">             
                <li><a href="#">Pharmacy</a>
                </li>
                <li class="active">edit Pharmacy</li>
              </ol>
            </div>
          </div>
          <div class="row">        
            <div class="col-md-12">
              <div class="panel panel-default no-bd">
                <div class="panel-header bg-dark">
                  <h3 class="panel-title"><strong>Fill</strong> Necessary Details</h3>
                </div>
                <div class="panel-body bg-white">
                  <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <form role="form" class="form-validation" action="/update_pharmacy_data" method="post" enctype="multipart/form-data">
                        <div class="row">
                          <div class="col-sm-6">
                          <input type="hidden" name="pharmacy_id" value="<%-data._id%>" >
                            <div class="form-group">
                              <label class="control-label">Pharmacy Name</label>
                              <div class="append-icon">
                                <input type="text" name="pharmacy_name" value="<%- data.pharmacy_name %>" class="form-control" placeholder="Update Name Of Pharmacy" required/>
                              </div>
                            </div>
                            <div class="form-group">
                              <label class="control-label">Pharmacy logo</label>
                              <div class="file">
                                <div class="option-group">
                                  <span class="file-button btn-primary">Choose File</span>
                                  <input type="file" multiple="" class="custom-file" name="pharmacy_logo" accept="image/*" id="avatar" onchange="document.getElementById('uploader').value = this.value;">
                                  <input type="text" class="form-control" id="uploader" placeholder="no file selected" readonly="">
                                </div>
                              </div>
                            </div>
                            <div class="form-group">
                              <label class="control-label">Pharmacy Tagline</label>
                              <div class="append-icon">
                                <input type="text" name="pharmacy_tagline"  value="<%- data.pharmacy_tagline %>" class="form-control" placeholder="Enter tagline for pharmacy Here.." required/>
                              </div>
                            </div>
                            <div class="form-group">
                              <label class="control-label">Pharmacy Email</label>
                              <div class="append-icon">
                                <input type="email" name="pharmacy_email" value="<%- data.pharmacy_email %>" class="form-control" placeholder="Enter Email of the pharmacy Here.." required/>
                              </div>
                            </div>
                            <div class="form-group">
                              <label class="control-label">Pharmacy Phone</label>
                              <div class="append-icon">
                                <input type="text" data-mask="(999) 999-9999" name="pharmacy_phone" value="<%- data.pharmacy_phone %>" class="form-control" placeholder="Enter phone number of the Pharmacy Here.." required/>
                              </div>
                            </div>

                          </div>
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label class="control-label">About Pharmacy</label>
                              <div class="append-icon">
                                <textarea rows="6" class="form-control underlined" name="about_pharmacy" id="about_pharmacy" ><%- data.about_pharmacy %></textarea></div>
                            </div>
                            <div class="form-group">
                              <label class="control-label">Pharmacy Address</label>
                              <div class="append-icon">
                                <textarea rows="5" class="form-control underlined" name="pharmacy_address" id="pharmacy_address" ><%- data.pharmacy_address %></textarea></div>
                            </div>

                            <div class="form-group">
                              <label class="control-label">Pharmacy Timing</label>
                              <div>
                                  <label class="col-sm-1 control-label">From:</label>
                                <div class="col-sm-5">
                                 <div class="append-icon">
                                    <input type="text" name="pharmacy_timing1" id="pharmacy_timing1" class="timepicker form-control" value="<%# time[0] %>" required="">
                                  </div> 
                                </div>
                                  <label class="col-sm-1 control-label">To:</label>
                                <div class="col-sm-5">
                                  <div class="append-icon">
                                    <input type="text" name="pharmacy_timing2" id="pharmacy_timing2"  class="timepicker form-control" value="<%# time[1] %>" required="">
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="text-center  m-t-20">
                          <button type="submit" class="btn btn-embossed btn-primary">Submit</button>
                          <button type="reset" class="cancel btn btn-embossed btn-default m-b-10 m-r-0">Cancel</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>    
          <%- include layouts/footer.ejs %>
        </div>
        <!-- END PAGE CONTENT -->
      <%- include layouts/js.ejs %>
<script src="../assets/global/plugins/jquery-validation/jquery.validate.js"></script> 
<script src="../assets/global/plugins/timepicker/jquery-ui-timepicker-addon.min.js"></script> <!-- Time Picker -->
<script type="text/javascript">
 var output = '<%= data.pharmacy_timing %>';
  var time = output.split('-');
  console.log(time);
  document.getElementById('pharmacy_timing1').value = time[0]; 
  document.getElementById('pharmacy_timing2').value = time[1]; 
</script>
