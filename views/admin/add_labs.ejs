  $(document).ready(function(){
    var test1 = document.getElementById('test').value;
    console.log(test1);
    var price1 = document.getElementById('pre_price1').value;
    console.log(price1);

      var i=2;
      $("#add_new_test").click(function(){

        var html='<span class="main_test"><div class="row"><div class="col-sm-6"><label class="control-label">Test Offered'+(i-1)+'</label><div class="option-group"><select id="test'+i+'" name="test'+(i-1)+'" class="" required><% for(var i=0; i < data.length; i++) { %><option value="<%= data[i]._id %>"><%= data[i].name%></option><%}%></select></div></div><div class="col-sm-6"><div class="form-group"><label class="control-label">Prevailing Price'+(i-1)+'</label><div class="append-icon"><input type="number" name="pre_price'+(i-1)+'" id="pre_price'+i+'" min="0" class="form-control" placeholder="Enter the price for respective test offered...." required></div></div></div></div></span>';

        var pre_price=$("#pre_price"+(i-1)).val();

        if (pre_price!='') {
