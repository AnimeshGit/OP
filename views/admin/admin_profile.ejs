<%- include layouts/header.ejs %>
    <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
          <div class="header">
            <h2>Edit <strong>Profile</strong></h2>
            <div class="breadcrumb-wrapper">
              <ol class="breadcrumb">             
                <li><a href="/dashboard">Admin</a>
                </li>
                <li class="active">Edit Profile</li>
              </ol>
            </div>
          </div>
          <div></div>
              <% if (error.length > 0) { %>
                  <div class="alert media fade in alert-danger"><%= error %></div>
              <% }else if (success.length > 0) { %>
                <div class="alert media fade in alert-success"><%= success %></div>
              <% } %>

          <div class="row">
            <div class="col-md-6">
              <div class="panel panel-default no-bd">
                <div class="panel-header bg-dark">
                  <h3 class="panel-title"><strong>Fill</strong> Necessary Details</h3>
                </div>
                <div class="panel-body bg-white">
                  <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <form role="form" class="form-validation" action="update_admin_profile" method="post">
                        <div class="row">
                          <input type="hidden" name="admin_id" value="<%- adminId %>">

                          <div class="col-sm-12">
                            <div class="form-group">
                              <label class="control-label">First Name</label>
                              <div class="append-icon">
                                <input type="text" name="admin_first_name" class="form-control" maxlength="100" placeholder="Enter First Name" required value="<%- adminFirstName %>"> 
                              </div>
                            </div>
                          </div>
                          
                          <div class="col-sm-12">
                            <div class="form-group">
                              <label class="control-label">Last Name</label>
                              <div class="append-icon">
                                <input type="text" name="admin_last_name" class="form-control" maxlength="100" placeholder="Enter Last Name" required value="<%- adminLastName %>"> 
                              </div>
                            </div>
                          </div>
                                                    
                          <div class="col-sm-12">
                            <div class="form-group">
                              <label class="control-label">Username(Email Id) </label>
                              <div class="append-icon">
                             <input type="email" class="form-control" id="admin_email" name="admin_email" placeholder="Enter Username(Email Id )" required  value="<%- adminEmail %>">
                              </div>
                            </div>
                          </div>
                        
                        </div>
                   
                        <div class="text-center  m-t-20">
                          <button type="submit" class="btn btn-embossed btn-primary">Submit</button>
                          <button type="reset" class="cancel btn btn-embossed btn-default m-b-10 m-r-0">Cancel</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="panel panel-default no-bd">
                <div class="panel-header bg-dark">
                  <h3 class="panel-title"><strong>Change Password</strong></h3>
                </div>
                <div class="panel-body bg-white">
                  <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <form role="form" class="form-validation" action="changepassword" method="post">
                        <div class="row">
                           <div class="col-sm-12">
                            <input type="hidden" name="admin_id" value="<%- adminId %>">

                            <!-- <div class="form-group">
                              <label class="control-label">Old Password</label>
                              <div class="append-icon">
                                <input type="password" name="oldpassword" id="oldpassword" class="form-control" maxlength="100" placeholder="Enter Old Password" required>
                              </div>
                            </div> -->
                          </div>

                          <div class="col-sm-12">
                            <div class="form-group">
                              <label class="control-label">New Password</label>
                              <div class="append-icon">
                                <input type="password" name="newPassword" id="new_pass" class="form-control" maxlength="100" placeholder="Enter New Password" required>
                              </div>
                            </div>
                          </div>
                          <div class="col-sm-12">
                            <div class="form-group">
                              <label class="control-label">Confirm Password </label>
                              <div class="append-icon">
                             <input type="password" id="conf_pass" name="confirmPassword" class="form-control" placeholder="Confirm Password" required>                         
                              </div>
                            </div>
                          </div>
                        </div>
                     
                        <div class="text-center  m-t-20">
                          <button type="submit" class="btn btn-embossed btn-primary">Submit</button>
                          <button type="reset" class="cancel btn btn-embossed btn-default m-b-10 m-r-0">Cancel</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- <div class="col-lg-12" style="height:720px"> -->
              <!-- HERE COMES YOUR CONTENT -->
            <!-- </div> -->
          </div>
        <%- include layouts/footer.ejs %>

        </div>
        <!-- END PAGE CONTENT -->
      </div>
      <!-- END MAIN CONTENT -->
      
    </section>
    <%- include layouts/js.ejs %>

<script type="text/javascript">
var password = document.getElementById("new_pass")//()=>id of thje field
  , confirm_password = document.getElementById("conf_pass");//()=>id of thje fields

function validatePassword(){
  if(new_pass.value != conf_pass.value) {
    conf_pass.setCustomValidity("Passwords Don't Match");
  } else {
    conf_pass.setCustomValidity('');
  }
}

password.onchange = validatePassword;
conf_pass.onkeyup = validatePassword;
</script>
