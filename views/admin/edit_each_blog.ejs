<%- include layouts/header.ejs %>
     <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
          <div class="header">
            <h2>Edit <strong>Blogs</strong></h2>
            <div class="breadcrumb-wrapper">
              <ol class="breadcrumb">             
                <li><a href="#">Blogs</a>
                </li>
                <li class="active">Edit Blogs</li>
              </ol>
            </div>
          </div>
          <div class="row">        
            <div class="col-md-12">
              <div class="panel panel-default no-bd">
                <div class="panel-header bg-dark">
                  <h3 class="panel-title"><strong>Edit</strong> Necessary Details</h3>
                </div>
                <div class="panel-body bg-white">
                  <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <form role="form" class="form-validation" action="/update_blog_data" method="post" enctype="multipart/form-data">
                        <div class="row">
                          <div class="col-sm-6">
                            <div class="form-group">
                            <input type="hidden" name="blog_id" id="blog_id" value="<%- data._id %>">
                              <label class="control-label">Blog Title</label>
                              <div class="append-icon">
                                <input type="text" name="blog_title" value="<%- data.title %>" class="form-control" placeholder="Enter Title For Blog" required>
                              </div>
                            </div>
                            <div class="form-group">
                              <label class="control-label">Blog Image</label>
                              <div class="file">
                                <div class="option-group">
                                  <span class="file-button btn-primary">Choose File</span>
                                  <input type="file" accept="image/*" value="#" class="custom-file" name="blog_image" id="avatar" onchange="document.getElementById('uploader').value = this.value;">
                                  <input type="text" class="form-control" id="uploader" placeholder="no file selected" readonly="">
                                </div>
                              </div>
                            </div>
                            <div class="form-group">
                              <label class="control-label">Blog Author</label>
                              <div class="append-icon">
                                <input type="text" name="blog_author" value="<%- data.authorName %>" class="form-control" placeholder="Enter Author of the  Blog Here.." required>
                              </div>
                            </div>
                          </div>
                            
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label class="control-label">Blog Content</label>
                              <div class="append-icon">
                                <textarea rows="10" class="form-control underlined" name="blog_content" id="blog_content" ><%- data.content %></textarea></div>
                            </div>
                          </div>
                        </div>
                        <div class="text-center  m-t-20">
                          <button type="submit" class="btn btn-embossed btn-primary">Submit</button>
                          <button type="reset" class="cancel btn btn-embossed btn-default m-b-10 m-r-0">Cancel</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>    
          <%- include layouts/footer.ejs %>
        </div>
        <!-- END PAGE CONTENT -->
      <%- include layouts/js.ejs %>
<script src="../assets/global/plugins/jquery-validation/jquery.validate.js"></script> 
    <!-- Form Validation -->
    