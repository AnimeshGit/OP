<%- include layouts/header.ejs %>
     <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
          <div class="header">
            <h2>View <strong>Articles</strong></h2>
            <div class="breadcrumb-wrapper">
              <ol class="breadcrumb">             
                <li><a href="#">Articles</a>
                </li>
                <li class="active">View Articles</li>
              </ol>
            </div>
          </div>
          <div class="row">        
            <div class="col-md-12">
              <div class="panel panel-default no-bd">
                <div class="panel-header bg-dark">
                  <h3 class="panel-title"><strong>View</strong> Particular Articles Details</h3>
                </div>
                <div class="panel-body bg-white">
                  <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <form role="form" class="form-validation" action="article_update" method="post" enctype="multipart/form-data">
                        <div class="row">
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label class="control-label">Articles Title</label>
                              <div>
                              <%# use = instead of # %>
                                <%- data.title %>  
                              </div>
                            </div>
                            <div class="form-group">
                              <label class="control-label">Articles Content</label>
                              <div class="append-icon">
                                <%- data.content %>
                              </div>
                            </div>
                            
                            <div class="form-group">
                              <label class="control-label">Articles Author</label>
                              <div class="append-icon">
                                <%- data.authorName %>  
                              </div>
                            </div>

                            <div class="form-group">
                              <label class="control-label">Articles State</label>
                              <div class="append-icon">
                                <%- data.state %>  
                              </div>
                            </div>

                            <div class="form-group">
                              <label class="control-label">Articles Type</label>
                              <div class="append-icon">
                                <%- data.type %>  
                              </div>
                            </div>




                          </div>
                            
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label class="control-label">Articles Image</label>
                              <div>
                                <% if(data.image==''){ %>
                        <img src="<%- globalConsTant.baseUrl + globalConsTant.imageUrl %>articles/default.png" height="400" width="400">
                        <% }else{ %>
                        <img src="<%- globalConsTant.baseUrl + globalConsTant.imageUrl %>articles/<%- data.image %>" height="400" width="400">
                        <%}%>
                        
                                <!-- <img src="<%# imageURL %>blog_images/<%# data[0].blog_image %>" width="500" height="400"> -->
                              </div>
                            </div>
                          </div>
                        </div>
                        <!-- <div class="text-center  m-t-20">
                          <button type="submit" class="btn btn-embossed btn-primary">Submit</button>
                          <button type="reset" class="cancel btn btn-embossed btn-default m-b-10 m-r-0">Cancel</button>
                        </div> -->
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>    
          <%- include layouts/footer.ejs %>
        </div>
        <!-- END PAGE CONTENT -->
      <%- include layouts/js.ejs %>
     </body>
</html>